<Window x:Class="ManagerSalesTestProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManagerSalesTestProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="5">
            <Button Content="Load" Click="LoadClick" Margin="5" Padding="10 5"/>
            <Button Content="Add" Click="AddClick" Margin="5" Padding="10 5"/>
            <Button Content="Update" Click="UpdateClick" Margin="5" Padding="10 5"/>
            <Button Content="Delete" Click="DeleteClick" Margin="5" Padding="10 5"/>
        </StackPanel>

        <DataGrid x:Name="EquipmentGrid" Grid.Row="1" Margin="5" AutoGenerateColumns="True"/>
    </Grid>
</Window>
